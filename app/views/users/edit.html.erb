<h2>Edit User</h2>
<%= link_to '[ <- back to list ]', users_path(course_id: @user.course_id), class: "back-link" %>

<%= form_for @user do |f|%>
<ul class="item-list">
	<li>
		<label for="email">Email:</label>
		<input type="text" name="email" id="email" value="<%= @user.email %>">
	</li>
	<li>
		<label for="password">Password:</label>
		<input type="text" name="password" id="password" value="<%= @user.password %>">
	</li>
	<li>
		<label for="course_id">Class:</label>
		<select name="course_id" id="course_id">
			<% @courses.each do |c| %>
				<% if @user.course_id.to_i == c.id.to_i %>
					<% is_selected = ' selected' %>
				<% end %>
				<option value="<%= c.id %>"<%= is_selected %>><%= c.name %></option>
			<% end %>
		</select>
	</li>
	<li>
		<label for="admin">Admin?</label>
		<select name="admin" id="admin">
			<option value="0" <%= "selected" if @user.admin == false %>>No</option>
			<option value="1" <%= "selected" if @user.admin == true %>>Yes</option>
		</select>
	</li>
	<li><input type="submit" value="Update User"> <%= link_to "[ cancel ]", :back, class: "edit-link" %></li>
</ul>
<% end %>