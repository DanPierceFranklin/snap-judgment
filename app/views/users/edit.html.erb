<h2>Edit User</h2>
<%= link_to '[ <- back to list ]', users_path(course_id: @user.course_id), class: "back-link" %>

<%= form_with model: @user do |form| %>
<% puts 'ADMIN!!' %>
<% puts @user.admin %>
<% puts 'ADMIN!!' %>
<ul class="item-list">
	<li><%= form.label :course_id,'Class: ' %>
		<%= form.select(:course_id, options_from_collection_for_select(@courses, :id, :name, @user.course_id)) %>
	</li>
	<li><%= form.label :email, 'Email: ' %>
		<%= form.email_field :email %>
	</li>
	<li><%= form.label :password, 'Password: ' %>
		<%= form.password_field :password %>
	</li>
	<li><%= form.label :admin, 'Admin? ' %>
		<%= form.select(:admin, options_for_select([['No', false],['Yes', true]], @user.admin)) %>
	</li>
	<li><%= form.submit 'Update User' %> <%= link_to "[ cancel ]", :back, class: "edit-link" %></li>
</ul>
<% end %>