<h2>Edit Question</h2>
<%= link_to 'back to list', questions_path %>

<%= form_for @question do |f|%>
<ul>
	<li>
		<label for="situation">Question:</label>
		<input type="text" name="situation" id="situation" value="<%= @question.situation %>">
	</li>
	<li>
		<label for="description">Description:</label>
		<textarea name="description" id="description"><%= @question.description %></textarea>
	</li>
		<label for="hint">Hint:</label>
		<input type="text" name="hint" id="hint" value="<%= @question.hint %>">
	<li>
		<label for="image_url">Image URL:</label>
		<input type="text" name="image_url" id="image_url" value="<%= @question.image_url %>">
	</li>
	<li>
		<label for="option1">Option #1:</label>
		<input type="text" name="option1" id="option1" value="<%= @question.option1 %>">
	</li>
	<li>
		<label for="option2">Option #2:</label>
		<input type="text" name="option2" id="option2" value="<%= @question.option2 %>">
	</li>
	<li>
		<label for="option3">Option #3:</label>
		<input type="text" name="option3" id="option3" value="<%= @question.option3 %>">
	</li>
	<li>
		<label for="option4">Option #4:</label>
		<input type="text" name="option4" id="option4" value="<%= @question.option4 %>">
	</li>
	<li>
		<label for="answer">Answer:</label>
		<input type="text" name="answer" id="answer" value="<%= @question.answer %>">
	</li>
	<li><input type="submit" value="Update Question"> <%= link_to "cancel", :back %></li>
</ul>
<% end %>